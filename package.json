{
  "name": "nest-rabbitmq-appender",
  "version": "2.0.27",
  "description": "nestjs rabbitmq logger appender",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/aquariuslt/nest-rabbitmq-appender",
  "author": "Aquariuslt <superaquariuslt@gmail.com>",
  "license": "MIT",
  "private": false,
  "keywords": [
    "nestjs",
    "rabbitmq",
    "logback",
    "logger"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "test": "jest --forceExit",
    "test:cov": "jest --coverage --forceExit",
    "release": "semantic-release"
  },
  "files": [
    "dist",
    "index.ts"
  ],
  "dependencies": {
    "date-fns": "4.1.0",
    "debug": "4.4.0",
    "lodash": "4.17.21"
  },
  "devDependencies": {
    "@nestjs/common": "10.4.15",
    "@nestjs/core": "7.6.18",
    "@nestjs/platform-express": "10.4.15",
    "@nestjs/testing": "10.4.15",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@types/amqplib": "0.10.6",
    "@types/jest": "29.5.14",
    "@types/lodash": "4.17.13",
    "@types/node": "22.10.2",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "8.18.1",
    "@typescript-eslint/parser": "8.18.1",
    "amqplib": "0.10.5",
    "eslint": "9.17.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "jest": "29.7.0",
    "prettier": "3.4.2",
    "reflect-metadata": "0.2.2",
    "rimraf": "6.0.1",
    "rxjs": "7.8.1",
    "rxjs-compat": "6.6.7",
    "semantic-release": "24.2.0",
    "supertest": "7.0.0",
    "ts-jest": "29.2.5",
    "typescript": "5.7.2"
  },
  "peerDependencies": {
    "@nestjs/common": "^6.0.0 || ^7.0.0 || ^10.0.0",
    "@nestjs/core": "^6.0.0 || ^7.0.0",
    "amqplib": "^0.5.5 || ^0.6.0 || ^0.7.0 || ^0.8.0 || ^0.9.0 || ^0.10.0",
    "reflect-metadata": "^0.1.12 || ^0.2.0",
    "rxjs": "^6.0.0 || ^7.0.0"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint"
    ],
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/camelcase": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-member-accessibility": "off",
      "@typescript-eslint/no-parameter-properties": "off",
      "@typescript-eslint/interface-name-prefix": "off"
    }
  },
  "prettier": {
    "semi": true,
    "arrowParens": "always",
    "proseWrap": "never",
    "singleQuote": true,
    "printWidth": 120
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "<rootDir>/src/*.ts",
      "!<rootDir>/src/__tests__/**/*.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.test.ts"
    ],
    "testEnvironment": "node",
    "coverageDirectory": "<rootDir>/reports/coverage"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      "@semantic-release/npm",
      "@semantic-release/changelog",
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs",
            "package.json",
            "README.md",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
